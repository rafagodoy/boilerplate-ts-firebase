{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es2020",
      "module": "CommonJS",
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
    },
    "compileOnSave": true,
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
}