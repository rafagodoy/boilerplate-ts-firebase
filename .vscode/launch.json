{
  "version": "0.2.0",
  "configurations": [
   {
    "name": "my-money-bot-api-debug",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceRoot}",
    "runtimeExecutable": "npm",
    "runtimeArgs": [
     "run-script",
     "debug"
    ],
    "port": 4000
   },
   {
    "name": "alexa-skill-debug",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/local-debugger.js",
    "args": [
        "--portNumber", "3001",
        "--skillEntryFile", "${workspaceRoot}/dist/main/handlers/alexa/index.js",
        "--lambdaHandler", "handlers"
    ],
   }
  ]
 }