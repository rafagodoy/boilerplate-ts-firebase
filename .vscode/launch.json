{
  "version": "0.2.0",
  "configurations": [
   {
    "name": "big-eye-api-debug",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceRoot}",
    "runtimeExecutable": "npm",
    "localRoot": "${workspaceRoot}/src/main/handlers/api",
    "runtimeArgs": [
     "run-script",
     "debug"
    ],
    "port": 3000,
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "restart": true
   },
  ]
 }